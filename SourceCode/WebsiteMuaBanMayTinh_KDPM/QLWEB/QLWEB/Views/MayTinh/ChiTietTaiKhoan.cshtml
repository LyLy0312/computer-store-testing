@model QLWEB.Models.KhachHang
@{
    ViewBag.Title = "Chi tiết tài khoản";
    Layout = "~/Views/Shared/_Layout_.cshtml";
}

<h2>Chi tiết tài khoản khách hàng</h2>

<div class="card p-4" style="max-width: 500px; margin: auto;">

    <p><strong>Tên khách hàng:</strong> @Model.TenKhachHang</p>
    <p><strong>Mã khách hàng:</strong> @Model.KhachHangID</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
    <p><strong>SĐT:</strong> @Model.SoDienThoai</p>
    <p><strong>Mật khẩu:</strong> ******</p>

    <a href="@Url.Action("DSTaiKhoan", "MayTinh")" class="btn btn-secondary mt-3">Quay lại danh sách</a>
</div>
