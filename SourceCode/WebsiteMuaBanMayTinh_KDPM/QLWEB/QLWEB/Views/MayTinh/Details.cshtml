<div class="container product-container">
    <div class="row product-detail">
        <div class="col-md-6">
            <h2 style="text-align: center">@Model.TenSP</h2>
            <img src="~/Images/@Url.Content(Model.DuongDan)" alt="@Model.TenSP" />
            <div style="text-align: center;">
                @Html.ActionLink("Quay lại", "Index", "MayTinh", new { @class = "btn_" })
                @if (Session["KhachHangID"] != null)
                {
                    @Html.ActionLink("Mua", "ThemGioHang", "GioHang", new { MTID = Model.MTID, returnUrl = Url.Action("Index", "MayTinh") }, new { @class = "btn_" })
                }
                else
                {
                    @Html.ActionLink("Mua", "Login", "MayTinh", null, new { @class = "btn_" })
                }
            </div>
        </div>

        <div class="col-md-6 product-info">
            <table class="tb_chitiet_sp">
                <tr>
                    <th colspan="2" style="text-align: center;">CHI TIẾT SẢN PHẨM</th>
                </tr>
                <tr>
                    <th>Danh Mục</th>
                    <td>@Model.DanhMuc.TenDanhMuc</td>
                </tr>
                <tr>
                    <th>Mô Tả</th>
                    <td>@Model.MoTa</td>
                </tr>
                <tr>
                    <th>Giá</th>
                    <td>@Model.Gia</td>
                </tr>
                <tr>
                    <th>RAM</th>
                    <td>@Model.RAM</td>
                </tr>
                <tr>
                    <th>Lưu Trữ</th>
                    <td>@Model.LuuTru</td>
                </tr>
                <tr>
                    <th>Kích Thước Màn Hình</th>
                    <td>@Model.KichThuocManHinh</td>
                </tr>
                <tr>
                    <th>Màu Sắc</th>
                    <td>@Model.MauSac</td>
                </tr>
                <tr>
                    <th>Dung Lượng Pin</th>
                    <td>@Model.DungLuongPin</td>
                </tr>
            </table>
        </div>
    </div>
    @if (ViewBag.DanhGias != null && ViewBag.DanhGias.Count > 0)
    {
        <div class="review-section">
            <h3 style="color:#2c3e50; text-align:center; margin-top:30px;">Đánh Giá Sản Phẩm</h3>
            @foreach (var danhGia in ViewBag.DanhGias)
            {
                <div class="review-item" style="background:#fff; margin:10px auto; padding:15px; border-radius:8px; box-shadow:0 0 10px rgba(0,0,0,0.1); max-width:700px;">
                    <p><strong>@danhGia.KhachHang.TenKhachHang</strong> - <span style="color:#999;">@danhGia.NgayDanhGia.ToString("dd/MM/yyyy")</span></p>
                    <p>
                        Đánh giá:
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= danhGia.DiemDanhGia)
                            {
                                <span style="color:gold;">★</span>
                            }
                            else
                            {
                                <span style="color:#ccc;">★</span>
                            }
                        }
                    </p>
                    <p style="margin-top:10px;">@danhGia.NoiDungDanhGia</p>
                </div>
            }
        </div>
    }
    else
    {
        <p style="text-align:center; margin-top:20px; font-style:italic;">Chưa có đánh giá nào cho sản phẩm này.</p>
    }
    @if (Session["KhachHangID"] != null)
    {
        <h4>Viết đánh giá của bạn:</h4>
        using (Html.BeginForm("GuiDanhGia", "MayTinh", FormMethod.Post))
        {
            @Html.Hidden("MTID", Model.MTID)

            <div class="form-group">
                <label for="DiemDanhGia">Chọn số sao (1-5):</label>
                <select name="DiemDanhGia" class="form-control" required>
                    <option value="">--Chọn sao--</option>
                    <option value="1">⭐</option>
                    <option value="2">⭐⭐</option>
                    <option value="3">⭐⭐⭐</option>
                    <option value="4">⭐⭐⭐⭐</option>
                    <option value="5">⭐⭐⭐⭐⭐</option>
                </select>
            </div>

            <div class="form-group">
                <label for="NoiDungDanhGia">Nội dung đánh giá:</label>
                <textarea name="NoiDungDanhGia" class="form-control" rows="4" required></textarea>
            </div>

            <button type="submit" class="btn btn-success">Gửi đánh giá</button>
        }
    }
    else
    {
        <p><a href="@Url.Action("Login", "MayTinh")">Đăng nhập</a> để viết đánh giá.</p>
    }

@if (ViewBag.SuggestedProducts != null && ((List<QLWEB.Models.MT>)ViewBag.SuggestedProducts).Count > 0)
{
    <h3>ĐỀ XUẤT🗯</h3>
    <div class="row">
        @foreach (var sp in ViewBag.SuggestedProducts as List<QLWEB.Models.MT>)
        {
            <div class="col-md-3">
                <div class="card" style="border: 1px solid #ddd; border-radius: 5px; padding: 10px; margin-bottom: 20px;">
                    <img src="~/Images/@sp.DuongDan" class="card-img-top" alt="@sp.TenSP" style="max-width: 100%; height: 150px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@sp.TenSP</h5>
                        <p class="card-text"><strong>Giá:</strong> @String.Format("{0:N0} VND", sp.Gia)</p>
                        @Html.ActionLink("Xem chi tiết", "Details", "MayTinh", new { id = sp.MTID }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        }
    </div>
}

