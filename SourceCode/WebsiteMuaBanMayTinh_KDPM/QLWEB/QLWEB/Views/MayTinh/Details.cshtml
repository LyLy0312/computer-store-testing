@model QLWEB.Models.MT

@{
    ViewBag.Title = "Chi tiết sản phẩm";
}
<style>
    /* Toàn bộ trang */
    body {
        background: linear-gradient(to right, #f8f9fa, #e9ecef);
        font-family: Arial, sans-serif;
    }

    /* Tiêu đề sản phẩm */
    h2 {
        font-size: 24px;
        font-weight: bold;
        color: #2c3e50;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: opacity 0.3s ease;
    }

        h2:hover {
            opacity: 0.7;
        }

    /* Bảng thông tin sản phẩm */
    .tb_chitiet_sp {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .tb_chitiet_sp th,
        .tb_chitiet_sp td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        .tb_chitiet_sp th {
            background: #007bff;
            color: white;
            text-transform: uppercase;
        }

    /* Ảnh sản phẩm */
    .product-container img {
        width: 100%;
        max-width: 300px;
        display: block;
        margin: 0 auto 15px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

        .product-container img:hover {
            transform: scale(1.05);
        }

    /* Nút bấm */
    .btn_ {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 10px;
        text-align: center;
        color: white;
        font-weight: bold;
        background: #28a745;
        border: none;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn_:hover {
            background: #218838;
            transform: scale(1.1);
        }

    /* Danh sách sản phẩm gợi ý */
    .recommended-section {
        margin-top: 40px;
        text-align: center;
    }

        .recommended-section h3 {
            font-size: 22px;
            color: #007bff;
            text-transform: uppercase;
            font-weight: bold;
            margin-bottom: 20px;
        }

    .recommended-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        gap: 20px;
    }

    .recommended-item {
        width: 200px;
        padding: 10px;
        border-radius: 8px;
        text-align: center;
        background: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .recommended-item:hover {
            transform: translateY(-5px);
        }

        .recommended-item img {
            width: 100%;
            height: 150px;
            object-fit: contain;
            margin-bottom: 10px;
        }

        .recommended-item h5 {
            font-size: 1.1em;
            color: #333;
        }

        .recommended-item p {
            font-size: 0.95em;
            color: #e74c3c;
            font-weight: bold;
        }
        .review-section {
            margin-top: 40px;
        }

        .review-item {
            margin-bottom: 20px;
        }
        h4 {
            margin-top: 30px;
            font-weight: bold;
            color: #2c3e50;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-control {
            margin-bottom: 15px;
        }
</style>

