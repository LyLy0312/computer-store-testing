                                        @(@Session["soluongsanpham"] ?? 0)
                                    </i>
                                </a>
                            }
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (ID == null)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Đăng nhập", "Login", "MayTinh", new { @class = "nav-link" })
                            </li>
