                                @Html.ActionLink("Đăng ký", "Register", "MayTinh", new { @class = "nav-link" })
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a href="@Url.Content("~/KhachHang/ThongTin")">
                                    <img src="@Url.Content("~/Images/anhdangnhap.jpg")" alt="Profile" class="rounded-circle" width="40" height="40">
                                </a>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link">@Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="dangxuat" href="@Url.Action("Logout", "MayTinh")">Đăng xuất</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Nội dung trang chính -->
    <div class="container mt-4">
        <div id="particles-js"></div>
        @RenderBody()

        <div id="particles-js"></div>
        <button id="backToTop" title="Lên đầu trang"><i class="bi bi-arrow-up"></i></button>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row text-center text-md-start">
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>Chúng tôi</h5>
                    <p>Chúng tôi cung cấp những dịch vụ tốt nhất để đảm bảo sự hài lòng của khách hàng.</p>
                    <div>
                        <a href="https://www.facebook.com/">
                            <img class="social-icon" src="@Url.Content("~/Images/facebook.jpg")" alt="Facebook" />
                        </a>
                        <a href="https://zalo.me/pc">
                            <img class="social-icon" src="@Url.Content("~/Images/zalo.jpg")" alt="Zalo" />
                        </a>
                        <a href="https://www.youtube.com/">
                            <img class="social-icon" src="@Url.Content("~/Images/youtobe.jpg")" alt="YouTube" />
                        </a>
