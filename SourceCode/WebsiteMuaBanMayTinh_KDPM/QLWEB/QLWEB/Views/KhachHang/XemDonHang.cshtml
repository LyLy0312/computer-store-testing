@using QLWEB.Models
@model List<CTDonHang>

@{
    ViewBag.Title = "XemDonHang";
    Layout = "~/Views/Shared/_Layout_.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chi Tiết Hóa Đơn</title>
    <style>
        .khung {
            width: 90%;
            max-width: 1000px;
            margin: 30px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-radius: 8px;
            font-family: Arial, sans-serif;
        }

            .khung h1, .khung h3 {
                text-align: center;
                color: #4CAF50;
            }

            .khung table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 20px;
            }

            .khung th, .khung td {
                padding: 12px;
                text-align: center;
                border-bottom: 1px solid #ccc;
            }

            .khung th {
                background-color: #4CAF50;
                color: white;
                text-transform: uppercase;
            }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            font-weight: bold;
            color: #4CAF50;
            text-decoration: none;
        }

            .back-link:hover {
                text-decoration: underline;
            }

        .header-row {
            text-align: left;
        }

        .logo-img {
            width: 40px;
            border-radius: 10px;
            vertical-align: middle;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="khung">
        <div class="header-row">
            <img src="~/Images/anhdangnhap.jpg" class="logo-img" />
            <span style="font-size: 20px; font-weight: bold;">GROUP-LongLyLy</span>
            <h1>Chi Tiết Hóa Đơn</h1>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@LayDuLieu.LayTenSanPham(item.MTID)</td>
                        <td>@item.SoLuong</td>
                        <td>@item.Gia</td>
                        <td>@(item.SoLuong * item.Gia)</td>
                    </tr>
                }

                @if (Model.Count > 0)
                {
                    <tr>
                        <td colspan="2"></td>
                        <th>Tổng Tiền:</th>
                        <th>@LayDuLieu.LayTongTien(Model[0].DonHangID) VNĐ</th>
                    </tr>
                }
                else
                {
                    <tr>
                        <td colspan="4">Không có sản phẩm trong đơn hàng.</td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="@Url.Action("ThongTin", "KhachHang")" class="back-link">Quay lại</a>
    </div>
</body>
</html>
