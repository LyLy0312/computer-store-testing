@model QLWEB.Models.XacNhanDonHangViewModel

@{
    ViewBag.Title = "Xác nhận đơn hàng";
    Layout = "~/Views/Shared/_Layout_.cshtml";
}
<div class="container mt-5" id="pdf-content">
    <h2 class="text-center mb-4">Xác nhận đơn hàng</h2>

    <!-- Thông tin khách hàng -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Thông tin khách hàng</h3>
        </div>
        <div class="card-body">
            @if (Model.KhachHang != null)
            {
                <p><strong>Họ và tên:</strong> @Model.KhachHang.TenKhachHang</p>
                <p><strong>Địa chỉ:</strong> @Model.KhachHang.DiaChi</p>
                <p><strong>Số điện thoại:</strong> @Model.KhachHang.SoDienThoai</p>
            }
            else
            {
                <p>Thông tin khách hàng không có sẵn.</p>
            }
        </div>

    </div>

    <!-- Thông tin đơn hàng -->
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0">Thông tin đơn hàng</h3>
        </div>

        <div class="card-body">
            @if (Model.DonHang != null)
            {
                <p><strong>Mã đơn hàng:</strong> @Model.DonHang.DonHangID</p>
                <p>
                    Ngày đặt hàng:
                    @Model.DonHang.NgayDatHang
                </p>
                <p><strong>Tổng tiền:</strong> @String.Format("{0:C}", Model.DonHang.TongTien)</p>
            }
            else
            {
                <p>Không tìm thấy thông tin đơn hàng.</p>
            }
        </div>
    </div>


    <!-- Chi tiết đơn hàng -->
    <div class="card">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Chi tiết đơn hàng</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ChiTietDonHang)
                    {
                        <tr>
                            <td>@item.MT.TenSP</td>
                            <td>@item.SoLuong</td>
                            <td>@String.Format("{0:C}", item.Gia)</td>
                            <td>@String.Format("{0:C}", item.SoLuong * item.Gia)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="text-center mb-4">
        <button class="btn btn-primary" onclick="inBaoCao()">In</button>
        <button id="download-pdf" class="btn btn-success">Tải PDF</button>
        <a href="@Url.Action("Index", "MayTinh")" class="btn btn-success">Tiếp tục mua sắm</a>
    </div>
    <div class="text-center mb-4">
        <form action="@Url.Action("DatHang", "GioHang")" method="post">
            <button type="submit" class="btn btn-danger">Đặt mua</button>
        </form>
    </div>

</div>
<script>
    // In nội dung
    function inBaoCao() {
        window.print();
    }

    // Tải PDF
    document.getElementById('download-pdf').addEventListener('click', function () {
        const element = document.getElementById('pdf-content'); // Nội dung cần xuất PDF
        const options = {
            margin: 1,
            filename: 'hoa_don.pdf',
            image: { type: 'jpeg', quality: 0.98 },
            html2canvas: { scale: 2 },
            jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
        };
        html2pdf().set(options).from(element).save();
    });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>